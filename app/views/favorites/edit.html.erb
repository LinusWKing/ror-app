<h1><%= @favorite.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @favorite.created_at %></p>
  </div>

  <div class="col-md-4">
    <%= link_to "Back", favorites_path, class: "btn btn-secondary" %>
  </div>
</div>

<hr>

<h2>Comments</h2>

<% if @favorite.comments.any? %>
  <ul>
    <% @favorite.comments.each do |comment| %>
      <li><%= comment.content %></li>
    <% end %>
  </ul>
<% else %>
  <p>No comments yet.</p>
<% end %>

<%= form_with model: [@movie, Comment.new], url:favorites_comments_path do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit "Add comment" %>
<% end %>


