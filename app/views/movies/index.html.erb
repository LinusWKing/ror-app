<h1>Top 10 airing films</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Overview</th>
      <th>Poster</th>
      <th>Release date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie["title"] %></td>
        <td><%= movie["overview"] %></td>
        <td><%= image_tag "https://image.tmdb.org/t/p/w500#{movie["poster_path"]}", width: "100" %></td>
        <td><%= movie["release_date"] %></td>
        <td><%= link_to "Save", new_favorites_path(favorite: { title: movie["title"], release_date: movie["release_date"] }), method: :get, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>